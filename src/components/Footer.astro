---
import { Github, Linkedin, Mail } from 'icons';

  const socials = [
    { icon: Github, href: 'https://github.com/Keys4Ever', label: 'Github' },
    { icon: Linkedin, href: 'https://linkedin.com', label: 'LinkedIn' },
    { icon: Mail, href: 'mailto:cubillagonzalo@outlook.com', label: 'Email' }
  ];
---
    <footer class="bg-black border-t-4 border-white mt-20">
      <div class="px-4 md:px-8 py-8 md:py-12">
        {/* Contact CTA */}
        <div class="mb-12 md:mb-16">
          <h2 class="text-3xl md:text-5xl font-bold mb-4">
            LET'S WORK
            <span class="block text-pink-500">TOGETHER</span>
          </h2>
          <a 
            href="mailto:cubillagonzalo@outlook.com"
            class="inline-block text-xl hover:text-pink-500 transition-colors"
          >
            CUBILLAGONZALO@OUTLOOK.COM
          </a>
        </div>

        {/* Social Links */}
        <div class="flex flex-wrap gap-6 mb-12 md:mb-16">
          {socials.map(({ icon: Icon, href, label }) => (
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 hover:text-pink-500 transition-colors text-lg"
            >
              <span set:html={Icon}></span>
              <span>{label.toUpperCase()}</span>
            </a>
          ))}
        </div>

        {/* Copyright */}
        <div class="pt-8 border-t border-white/20">
          <p class="text-sm md:text-base text-white/70">
            Â© 2024 | BUILT WITH ASTRO + TYPESCRIPT + TAILWIND
          </p>
        </div>
      </div>
    </footer>

---
import {
  Code2,
  Globe2,
  Database,
  Cloud,
  Wrench,
  Cpu,
  Palette,
  Box,
  Github,
  Layout,
  Server,
  Terminal,
  Smartphone
} from 'icons';

const skillCategories = {
  frontend: {
    title: 'FRONTEND',
    icon: Layout,
    skills: [
      { name: 'REACT / NEXT.JS', icon: Code2 },
      { name: 'TYPESCRIPT', icon: Code2 },
      { name: 'TAILWIND CSS', icon: Palette },
      { name: 'REDUX', icon: Box },
      { name: 'WEBPACK / VITE', icon: Wrench }
    ]
  },
  backend: {
    title: 'BACKEND',
    icon: Server,
    skills: [
      { name: 'NODE.JS', icon: Terminal },
      { name: 'EXPRESS', icon: Server },
      { name: 'GRAPHQL', icon: Database },
      { name: 'REST APIs', icon: Globe2 },
      { name: 'MICROSERVICES', icon: Cpu }
    ]
  },
  databases: {
    title: 'DATABASES',
    icon: Database,
    skills: [
      { name: 'POSTGRESQL', icon: Database },
      { name: 'MONGODB', icon: Database },
      { name: 'REDIS', icon: Database },
      { name: 'PRISMA', icon: Github },
      { name: 'SUPABASE', icon: Github }
    ]
  },
  cloud: {
    title: 'CLOUD & DEVOPS',
    icon: Cloud,
    skills: [
      { name: 'AWS', icon: Cloud },
      { name: 'DOCKER', icon: Box },
      { name: 'CI/CD', icon: Cpu },
      { name: 'KUBERNETES', icon: Github },
      { name: 'VERCEL', icon: Github }
    ]
  },
  design: {
    title: 'DESIGN',
    icon: Palette,
    skills: [
      { name: 'FIGMA', icon: Palette },
      { name: 'UI/UX', icon: Layout },
      { name: 'RESPONSIVE DESIGN', icon: Smartphone },
      { name: 'MOTION DESIGN', icon: Github },
      { name: 'ACCESSIBILITY', icon: Github }
    ]
  },
  tools: {
    title: 'TOOLS',
    icon: Wrench,
    skills: [
      { name: 'GIT', icon: Github },
      { name: 'JEST', icon: Github },
      { name: 'CYPRESS', icon: Github },
      { name: 'STORYBOOK', icon: Github },
      { name: 'POSTMAN', icon: Github }
    ]
  }
};
---

<section class="mb-20">
    <h2 class="text-4xl font-bold mb-12 border-l-4 border-pink-500 pl-4">SKILLS_</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {Object.entries(skillCategories).map(([, category]) => (
          <div class="border-2 border-white p-6 hover:border-pink-500 transition-colors">
            <h4 class="text-xl font-bold flex items-center gap-2 mb-4">
              <span class="text-pink-500" set:html={category.icon}></span>
              {category.title}_
            </h4>
            <ul class="space-y-3">
              {category.skills.map((skill) => (
                <li
                  class="flex items-center gap-2 text-gray-300 hover:text-white transition-colors"
                >
                  <span set:html={skill.icon} class="text-pink-500" />
                  {skill.name}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
      
</section>
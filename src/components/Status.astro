---
import { clock } from 'icons';

interface Props{
    mode: "available" | "unavailable";
}

const { mode } = Astro.props;
---
<div class={`inline-flex items-center gap-2 px-4 py-2 ${ mode === "unavailable" ? "bg-pink-500/10" : "bg-pink-400/5"} border-2 border-pink-500 mb-8`}>    
    <span class="text-pink-500 animate-pulse" set:html={clock}></span>
    <span class="text-pink-500 font-bold">{ mode == "unavailable" ? "CURRENTLY WORKING" : "OPEN TO WORK" }</span>
</div>
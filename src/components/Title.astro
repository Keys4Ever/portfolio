---
import { Mail, Github, FileText, ArrowRight} from 'icons'; 
import BlinkingUnderscore from './BlinkingUnderscore.astro';
---

    <section class="mb-20 border-b-4 border-white pb-12" id="Home">
      <div class="space-y-2 mb-8">
        <span class="text-2xl text-pink-500 ml-[5px] md:ml-[10px]">HELLO, I'M</span>
        <h1 class="text-6xl md:text-[9rem] font-bold tracking-tighter leading-none">
          GONZALO
          <span class="block">CUBILLA
            <span class="-ml-4 md:-ml-16"><BlinkingUnderscore fontSize='6rem'/></span>
          </span>
        </h1>
        <p class="text-3xl md:text-4xl font-bold text-gray-400 pt-3">
          FULL-STACK DEVELOPER <span class="hidden md:inline">/</span> CREATIVE CODER
        </p>
      </div>
      
      {/* CTA Buttons */}
      <div class="flex flex-col sm:flex-row gap-4 mb-8">
        <a 
          href="#Projects"
          class="group flex items-center justify-center gap-2 px-8 py-4 
                   bg-white text-black hover:bg-pink-500 hover:text-white 
                   transition-colors text-xl"
        >
            PROJECTS
          <span set:html={ArrowRight} class="group-hover:translate-x-1 transition-transform" />
        </a>
        <a 
          href="mailto:cubillagonzalo@outlook.com"
          class="group flex items-center justify-center gap-2 px-8 py-4 
                   border-2 border-white hover:bg-white hover:text-black 
                   transition-colors text-xl"
        >
          CONTACT
          <span set:html={ArrowRight} class="group-hover:translate-x-1 transition-transform" />
        </a>
      </div>


      <div class="flex flex-wrap gap-6 text-xl">
        <a 
          href="mailto:cubillagonzalo@outlook.com" 
          class="hover:text-pink-500 flex items-center gap-2"
        >
        <span set:html={Mail}></span>
        EMAIL
        </a>
        <a 
          href="https://github.com/Keys4Ever" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="hover:text-pink-500 flex items-center gap-2"
        >
          <span set:html={Github}></span>
          GITHUB
        </a>
        <a 
          href="/resume-en.pdf" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="hover:text-pink-500 flex items-center gap-2"
        >
        <span set:html={FileText}></span>
            RESUME [EN]
        </a>
        <a 
          href="/cv-es.pdf" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="hover:text-pink-500 flex items-center gap-2"
        >
        <span set:html={FileText}></span>
        RESUME [ES]
        </a>
      </div>
    </section>
---
import { Mail, Github, FileText} from 'icons'; 
import BlinkingUnderscore from './BlinkingUnderscore.astro';
---

    <section class="mb-20 border-b-4 border-white pb-12">
      <div class="space-y-2 mb-8">
        <span class="text-2xl text-pink-500 ml-[6px]">HELLO, I'M</span>
        <h1 class="text-8xl md:text-[9rem] font-bold tracking-tighter leading-none">
          GONZALO
          <span class="block">CUBILLA
            <span class="-ml-8 "> <span class="-ml-6"><BlinkingUnderscore fontSize='6rem'/></span></span>
          </span>
        </h1>
        <p class="text-3xl md:text-4xl font-bold text-gray-400 pt-3">
          FULL-STACK DEVELOPER / CREATIVE CODER
        </p>
      </div>

      <div class="flex flex-wrap gap-6 text-xl">
        <a 
          href="mailto:contact@example.com" 
          class="hover:text-pink-500 flex items-center gap-2"
        >
        <span set:html={Mail}></span>
        EMAIL
        </a>
        <a 
          href="https://github.com" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="hover:text-pink-500 flex items-center gap-2"
        >
          <span set:html={Github}></span>
          GITHUB
        </a>
        <a 
          href="/resume-en.pdf" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="hover:text-pink-500 flex items-center gap-2"
        >
        <span set:html={FileText}></span>
            RESUME [EN]
        </a>
        <a 
          href="/cv-es.pdf" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="hover:text-pink-500 flex items-center gap-2"
        >
        <span set:html={FileText}></span>
        CV [ES]
        </a>
      </div>
    </section>
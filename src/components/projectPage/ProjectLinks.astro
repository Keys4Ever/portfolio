---
import { Github, ExternalLink, Code2 } from 'icons';
import BlinkingUnderscore from '../BlinkingUnderscore.astro';

interface ProjectLinksProps {
  github: string;
  demo: string;
  technologies: string[];
}

const { github, demo, technologies } = Astro.props;
---

<div class="sticky top-24 hidden md:block">
  <div class="border-4 border-white p-4 grid grid-cols-1 gap-6 bg-black">
    <div>
      <h3 class="text-xl font-bold mb-4">
        TECH STACK<span class="mr-8"><BlinkingUnderscore fontSize="1.2rem" /></span>
      </h3>
      <ul class="space-y-2">
        {technologies.map((tech: string) => (
          <li class="flex items-center gap-2 text-sm">
            <span set:html={Code2} class="text-pink-500" />
            {tech}
          </li>
        ))}
      </ul>
    </div>

    <div class="space-y-3">
      <a 
        href={github} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="flex items-center gap-2 text-lg hover:text-pink-500 transition-colors"
      >
        <span set:html={Github}></span> VIEW SOURCE
      </a>
      <a 
        href={demo} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="flex items-center gap-2 text-lg hover:text-pink-500 transition-colors"
      >
        <span set:html={ExternalLink}></span> LIVE DEMO
      </a>
    </div>
  </div>
</div>

<div class="md:hidden border-4 border-white p-4 mb-8 bg-black">
  <div class="grid grid-cols-2 gap-6">
    <div>
        <h3 class="text-xl font-bold mb-4">
            TECH STACK&nbsp;&nbsp;<BlinkingUnderscore fontSize="1.2rem" />
          </h3>
      <ul class="space-y-2">
        {technologies.map((tech: string) => (
          <li class="flex items-center gap-2 text-sm">
            <span set:html={Code2} class="text-pink-500" />
            {tech}
          </li>
        ))}
      </ul>
    </div>

    <!-- Project Links Section -->
    <div class="space-y-3">
      <a 
        href={github} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="flex items-center gap-2 text-lg hover:text-pink-500 transition-colors"
      >
        <span set:html={Github}></span> VIEW SOURCE
      </a>
      <a 
        href={demo} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="flex items-center gap-2 text-lg hover:text-pink-500 transition-colors"
      >
        <span set:html={ExternalLink}></span> LIVE DEMO
      </a>
    </div>
  </div>
</div>
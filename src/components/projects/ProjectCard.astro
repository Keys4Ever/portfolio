---
import { ArrowUpRight } from 'icons';

interface Props {
  id: string;
  title: string;
  description: string;
  image?: string;
  tags: string[];
  video?: string[];
}

const { id, title, description, image, tags, video } = Astro.props;
---
<a href={`/project/${id}`} class="block">
  <div class="group border-4 border-white hover:border-pink-500 transition-colors">
    <div class="relative aspect-video overflow-hidden">
      {image && <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      />}
      {video && <video 
        src={video[0]} 
        autoplay 
        loop 
        muted 
        playsinline 
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      />}
      <div class="absolute inset-0 bg-black bg-opacity-50 duration-400 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" class="h-10 w-10" stroke-linejoin="round"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
    </div>
    </div>
    <div class="p-6 space-y-4">
      <h3 class="text-2xl font-bold">{title}</h3>
      <p class="text-gray-400">{description}</p>
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span 
            class="px-3 py-1 border-2 border-white text-sm"
          >
            {tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</a>

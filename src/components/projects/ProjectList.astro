---
import ProjectCard from './ProjectCard.astro';
import SecondaryProjectCard from './SecondaryProjectCard.astro';
import { projectsData } from '../../data/projects';
import BlinkingUnderscore from '../BlinkingUnderscore.astro';

const featuredProjects = projectsData.filter(p => p.type === 'featured');
const secondaryProjects = projectsData.filter(p => p.type === 'secondary');
---
<div class="space-y-20">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {featuredProjects.map((project) => (
      project.images? <ProjectCard 
        id={project.id}
        title={project.title}
        description={project.description}
        image={project.images[0]}
        tags={project.tags}
      /> : <ProjectCard 
        id={project.id}
        title={project.title}
        description={project.description}
        video={project.videos}
        tags={project.tags} />
    ))}
  </div>

  {secondaryProjects.length > 0 && (
    <div class="border-t-4 border-white pt-12">
      <h3 class="text-2xl font-bold mb-8 border-l-4 border-pink-500 pl-4">OTHER PROJECTS <span class="-ml-[6px] md:-ml-3"><BlinkingUnderscore fontSize='1.5rem' /></span></h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-stretch">
        {secondaryProjects.map((project) => (
          <SecondaryProjectCard 
            project={project}
          />
        ))}
      </div>
    </div>
  )}
</div>
